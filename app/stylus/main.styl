/* color variables */
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7
$blue = #235F9C
$lightBlue = #448AFF
$pink = #EC407A

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor, 10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

.page
  background-color #f5f5f5

.content
  padding-top 100px

.page-content
  padding-top 76px

 // Slide content right if menu is opened
.slide-right
  @media screen and (min-width 700px) and (max-width 1280px)
    transform: scale(1);
    transition: 0.10s linear
    padding-left 250px
  @media screen and (min-width 1280px) and (max-width 1470px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-left 240px
  @media screen and (min-width 1470px) and (max-width 1800px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-left 220px

 //Slide content left if search filters are opened
