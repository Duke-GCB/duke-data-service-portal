//chips styles
.chip-container {
  padding-left: 6px;
  display: flex;
  -webkit-flex-wrap: wrap; /* Safari */
  flex-wrap:         wrap;
  -webkit-align-content: space-around; /* Safari */
  align-content:         space-around;
}

.chip {
  margin: 2px
  padding: 0 25px;
  min-height: 24px;
  font-family: 'roboto';
  line-height: 10px;
  border-radius: 25px;
  background-color: $blue;
}

.closebtn {
  padding-left: 0;
  margin: 10px -15px 10px 0;
  color: $white;
  font-weight: 800;
  float: right;
  font-size: 20px;
  cursor: pointer;
}

.closebtn:hover {
  color: #90CAF9;
}

.chip-text {
  margin: 10px 10px 10px 0;
  color: $white;
  font-weight: 400;
  float: left;
  font-size: 12px;
}

.show-filters-transition {
  margin-left: 23%
  transition: padding-left .3s linear
  transition-timing-function: ease-in;
}

// Styles for list of file versions in the `add file` provenance modal
#fileVersionUl {
  padding-left: 0;
  -webkit-column-width: 60px;
  -webkit-column-count: 6;
  -moz-column-count: 6;
  column-count: 6;
}
#fileVersionUl li {
  color: $blue;
  cursor: pointer;
  display: inline-block;
  padding-bottom: 15px;
}

