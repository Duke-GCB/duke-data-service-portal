  @media screen and (min-width 700px) and (max-width 1280px)
    transform: scale(1);
    transition: 0.10s linear
    padding-right 250px
  @media screen and (min-width 1280px) and (max-width 1470px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-right 240px
  @media screen and (min-width 1470px) and (max-width 1800px)
    transform: scale(1);
    transition: 0.10s all linear;
